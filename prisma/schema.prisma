generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

enum Role {
  USER
  ADMIN
}



model employee {
  id        String @id @default(uuid()) 
  name      String
  email     String
  phone     String
  role      Role
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  daily_work_hours Int @default(530)
  daily_work_minutes Int @default(60)

  workLog workLog[]

}

model workLog {
  id          String @id @default(uuid()) 
  start_time  Decimal
  end_time    Decimal
  break_start Decimal
  break_end   Decimal
  total_working_hours Decimal


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  employee_id String

  employee    employee @relation(fields: [employee_id], references: [id])
}
